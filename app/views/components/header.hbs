{{#resume.basics}}
<header class="resume-header clearfix">
  <div class="profile-header pull-left">
    <h1>{{name}}</h1>
    <h2>{{label}}</h2>
  </div>
  <div class="profile-pic pull-right">

  {{#if email}}
    {{> info-tag text=email link=(concat 'mailto:' email) icon="las la-envelope"}}
  {{/if}}

  {{#if phone}}
    {{> info-tag text=phone link=(concat 'tel:+' phone) icon="las la-phone"}}
  {{/if}}

  {{#if location.address}}
    {{> info-tag text=location.address icon="las la-map-marker"}}
  {{/if}}

  {{#if url}}
    {{> info-tag text=url link=url icon="lab la-github" }}
  {{/if}}

  </div>
</header>
{{/resume.basics}}
