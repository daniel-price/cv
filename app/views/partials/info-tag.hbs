<div class="info-tag-container">
  {{#if icon}}
  <i class="{{icon}}"></i>
  {{/if}}

  {{#if link}}
  <h6 class="info-text">
    <a href="{{link}}" target="_blank">
      {{removeProtocol text}} <i class="la" aria-hidden="true"></i>
    </a>
  </h6>
  {{else}}
  <h6 class="info-text">{{{text}}}</h6>
  {{/if}}
</div>
