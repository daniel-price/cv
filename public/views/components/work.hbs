{{#if resume.work.length}}
<div class="container work-container">
  {{> title value="Experience"}}

  {{#each resume.work}}
  <section class="item">
    {{> section-header name=name url=url}}

    {{#if position}}
     <h4>{{position}}</h4>
    {{/if}}

    {{#if summary}}
      <p class="summary">{{summary}}</p>
    {{/if}}

    {{#if skills.length}}
      <h5>{{concatAsList skills}}</h5>
    {{/if}}

    {{#if highlights.length}}
      <ul>
        {{#each highlights}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </section>
  {{/each}}
</div>
{{/if}}
